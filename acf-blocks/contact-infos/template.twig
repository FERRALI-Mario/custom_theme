<section class="py-12 px-4">
  <div class="container mx-auto max-w-2xl text-center">
    {# Titre du bloc #}
    {% if fields.contact_form_title %}
        <h2 class="text-3xl font-bold mb-4">{{ fields.contact_form_title }}</h2>
    {% endif %}

    {# Texte introductif du bloc #}
    {% if fields.contact_form_text %}
        <p class="max-w-xl mx-auto text-gray-800 mb-10">{{ fields.contact_form_text }}</p>
    {% endif %}
    <div class="flex flex-col sm:flex-row md:flex-row lg:flex-row xl:flex-row justify-between gap-8 text-center">
      
      {% if fields.contact_address %}
        <div class="w-full md:w-1/3 flex flex-col items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5s-3 1.343-3 3 1.343 3 3 3z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 22s8-4.5 8-10a8 8 0 10-16 0c0 5.5 8 10 8 10z" />
          </svg>
          <h5 class="text-gray-500 text-sm mb-1">Adresse</h5>
          <p class="text-base font-medium">{{ fields.contact_address }}</p>
        </div>
      {% endif %}

      {% if fields.contact_phone %}
        <div class="w-full md:w-1/3 flex flex-col items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.95.68L10.68 6.6a1 1 0 01-.21 1.09l-1.2 1.2a16 16 0 006.01 6.01l1.2-1.2a1 1 0 011.09-.21l2.92 1.46a1 1 0 01.68.95V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <h5 class="text-gray-500 text-sm mb-1">Téléphone</h5>
          <p class="text-base font-medium">{{ fields.contact_phone }}</p>
        </div>
      {% endif %}

      {% if fields.contact_email %}
        <div class="w-full md:w-1/3 flex flex-col items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 5h14a2 2 0 012 2v10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2z" />
          </svg>
          <h5 class="text-gray-500 text-sm mb-1">Email</h5>
          <p class="text-base font-medium">{{ fields.contact_email }}</p>
        </div>
      {% endif %}

    </div>
  </div>
</section>
