<section class="py-16 md:py-24 px-4">
	<div class="container mx-auto px-4 md:px-6 max-w-7xl">
		{% if fields.title or fields.subtitle %}
			{% include 'components/section-header.twig' with { title: fields.title, text: fields.subtitle } %}
		{% endif %}

		{% if fields.entries %}
			<div class="mt-12 space-y-4" data-faq role="region" aria-label="Questions fréquemment posées">
				{% for faq in fields.entries %}
					<article class="rounded-xl bg-gray-50 border border-white/10  shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden" data-faq-item>
						<button type="button" class="faq-toggle w-full flex items-center justify-between px-6 md:px-8 py-4 md:py-5 font-medium text-base md:text-lg text-gray-900 hover:bg-gray-50 focus:outline-none transition-colors" aria-expanded="false" aria-controls="faq-answer-{{ loop.index }}" data-faq-trigger>
							<span class="text-left">{{ faq.question }}</span>
							<svg class="h-5 w-5 flex-shrink-0 text-gray-900 transition-transform duration-300" fill="none" stroke="currentColor" stroke-width="2" viewbox="0 0 24 24" aria-hidden="true">
								<path d="M6 9l6 6 6-6"/>
							</svg>
						</button>

						<div id="faq-answer-{{ loop.index }}" class="faq-answer max-h-0 overflow-hidden transition-all duration-300" aria-hidden="true" data-faq-content>
							<div class="px-6 md:px-8 py-4 md:py-5 border-t border-gray-700">
								<p class="text-base md:text-lg text-gray-600 leading-relaxed">
									{{ faq.answer }}
								</p>
							</div>
						</div>
					</article>
				{% endfor %}
			</div>
		{% endif %}
	</div>
</section>
