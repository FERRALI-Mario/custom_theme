<section class="py-8 px-4">
	<div class="container mx-auto max-w-4xl">
		{% if fields.title or fields.subtitle %}
			<div class="mx-auto max-w-xl text-center">
				{% if fields.title %}
					<h2 class="text-3xl sm:text-4xl md:text-3xl lg:text-3xl font-bold mb-4 sm:mb-5 lg:mb-6">
						{{ fields.title }}
					</h2>
				{% endif %}
				{% if fields.subtitle %}
					<p class="text-gray-800 text-base sm:text-lg lg:text-[1.125rem] leading-7 mb-10">
						{{ fields.subtitle }}
					</p>
				{% endif %}
			</div>
		{% endif %}

		<div class="space-y-4" data-faq>
			{% for faq in fields.entries %}
				<div class="faq-item bg-gray-50 border border-white/10 text-black rounded-xl px-4 transition-all duration-200 shadow hover:bg-gray-100" data-faq-item>
					<button type="button" class="faq-toggle flex w-full items-center justify-between py-4 font-semibold text-base sm:text-lg md:text-[1.0625rem] transition" aria-expanded="false" aria-controls="faq-answer-{{ loop.index }}" data-faq-trigger>
						<span class="text-left">{{ faq.question }}</span>
						<svg class="h-4 w-4 sm:h-5 sm:w-5 text-black transition-transform duration-300 rotate-0" fill="none" stroke="currentColor" stroke-width="2" viewbox="0 0 24 24" aria-hidden="true">
							<path d="M6 9l6 6 6-6"/>
						</svg>
					</button>

					<div id="faq-answer-{{ loop.index }}" class="faq-answer max-h-0 overflow-hidden transition-all duration-300 text-sm sm:text-base md:text-[1.0625rem] leading-7 text-black" aria-hidden="true" data-faq-content>
						<div class="pb-4 pt-0">
							{{ faq.answer }}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
