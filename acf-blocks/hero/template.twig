{% set image = get_attachment(fields.hero_background) %}
<section class="hero-block relative py-8 bg-cover bg-center"
  {% if image %}
    style="background-image: url('{{ image.src }}')"
  {% endif %}
>
  <div class="container mx-auto px-6 text-center relative z-10">
    {% if fields.hero_title %}
      <h1 class="text-3xl md:text-5xl font-bold mb-4">{{ fields.hero_title }}</h1>
    {% endif %}
    {% if fields.hero_subtitle %}
      <p class="text-lg text-gray-200">{{ fields.hero_subtitle }}</p>
    {% endif %}
  </div>
  <div class="absolute inset-0 bg-black opacity-50 z-0"></div>
</section>
