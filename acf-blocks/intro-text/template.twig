<section class="intro-text-block py-12 lg:py-16">
	<div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
		{% set align = (fields.alignment ?? 'left')|lower %}
		{# on aligne TOUT le bloc (titre + paragraphe) dans la mÃªme colonne #}
		{% set colAlign =
      align == 'center' ? 'mx-auto text-center' :
      (align == 'right' ? 'ml-auto text-right' : 'mr-auto text-left')
    %}

		<div class="w-full md:max-w-3xl {{ colAlign }}">
			{% if fields.title %}
				<h2 class="text-3xl sm:text-4xl md:text-4xl lg:text-4xl xl:text-4xl font-bold tracking-tight text-gray-900 mb-4 sm:mb-5 lg:mb-6">
					{{ fields.title }}
				</h2>
			{% endif %}

			{% if fields.paragraph %}
				<p class="text-base sm:text-lg lg:text-xl leading-relaxed text-gray-800">
					{{ fields.paragraph }}
				</p>
			{% endif %}
		</div>
	</div>
</section>
