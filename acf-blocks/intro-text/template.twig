<section class="intro-text-block py-16 md:py-24">
	<div class="container mx-auto px-4 md:px-6 max-w-7xl">
		{% set align = (fields.alignment ?? 'left')|lower %}
		{% set textAlign = align == 'center' ? 'text-center' : (align == 'right' ? 'text-right' : 'text-left') %}
		{% set marginClass = align == 'center' ? 'mx-auto' : (align == 'right' ? 'ml-auto' : 'mr-auto') %}

		<div class="w-full md:max-w-3xl {{ marginClass }} {{ textAlign }}">
			{% if fields.title %}
				<h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-8 text-gray-900">
					{{ fields.title }}
				</h2>
			{% endif %}

			{% if fields.paragraph %}
				<p class="text-base md:text-lg text-gray-600 leading-relaxed">
					{{ fields.paragraph }}
				</p>
			{% endif %}
		</div>
	</div>
</section>
