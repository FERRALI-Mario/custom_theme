<section class="legal-notice-block py-12 lg:py-16 bg-white">
	<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
		{% if fields.sections %}
			<div class="space-y-12">
				{% for item in fields.sections %}
					<div class="legal-section">
						{% if item.title %}
							<h3 class="text-xl font-bold text-gray-900 mb-4">
								{{ item.title }}
							</h3>
						{% endif %}
						<div class="prose prose-gray text-gray-600 max-w-none">
							{{ item.content|raw }}
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<p class="text-center text-gray-400 italic">Aucune mention légale ajoutée.</p>
		{% endif %}
	</div>
</section>
