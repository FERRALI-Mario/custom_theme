<section class="legal-notice-block py-16 md:py-24 bg-white">
	<div class="container mx-auto px-4 md:px-6 max-w-7xl">
		{% if fields.sections %}
			<div class="space-y-12">
				{% for item in fields.sections %}
					<article class="legal-section">
						{% if item.title %}
							<h3 class="text-xl md:text-2xl font-semibold mb-3 text-gray-900">
								{{ item.title }}
							</h3>
						{% endif %}

						{% if item.content %}
							<div class="prose prose-gray text-gray-600 max-w-none">
								{{ item.content|raw }}
							</div>
						{% endif %}
					</article>
				{% endfor %}
			</div>
		{% else %}
			<p class="text-center text-gray-400 italic">Aucune mention légale ajoutée.</p>
		{% endif %}
	</div>
</section>
