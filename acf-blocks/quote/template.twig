<section class="py-16 md:py-24">
	<div class="container mx-auto px-4 md:px-6 max-w-7xl">
		<figure class="mx-auto max-w-3xl">
			<div class="border-l-4 border-black pl-5 md:pl-8 py-2 md:py-3">
				<blockquote>
					<p class="text-base md:text-lg text-gray-600 leading-relaxed font-medium italic">
						{{ fields.content }}
					</p>
				</blockquote>

				{% if fields.author %}
					<figcaption class="mt-3 text-right text-base text-gray-500">
						&mdash;
						{{ fields.author }}
					</figcaption>
				{% endif %}
			</div>
		</figure>
	</div>
</section>
