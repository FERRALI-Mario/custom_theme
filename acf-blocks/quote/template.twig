<section class="py-12">
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<figure
			class="mx-auto max-w-3xl">
			{# Le trait vertical entoure citation + auteur #}
			<div class="border-l-4 border-black pl-5 md:pl-8 py-2 md:py-3">
				<blockquote class="text-left">
					<p class="text-base sm:text-lg md:text-[1.125rem] leading-7 text-black font-medium italic">
						{{ fields.content }}
					</p>
				</blockquote>

				{% if fields.author %}
					<figcaption class="mt-3 text-right text-sm sm:text-base md:text-sm text-gray-500">
						â€”
						{{ fields.author }}
					</figcaption>
				{% endif %}
			</div>
		</figure>
	</div>
</section>
