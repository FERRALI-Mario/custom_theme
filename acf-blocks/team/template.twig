{# acf-blocks/team/template.twig #}
{% set members = fields.members ?? [] %}

{% if members %}
<section class="team-block py-12 bg-white">
  <div class="container mx-auto px-6">
    <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      {% for member in members %}
        <div class="team-member text-center">
          {% if member.photo %}
            <img
              src="{{ member.photo.url }}"
              alt="{{ member.photo.alt }}"
              class="w-24 h-24 mx-auto rounded-full object-cover mb-4"
            />
          {% endif %}

          {% if member.name %}
            <h3 class="text-lg font-semibold">{{ member.name }}</h3>
          {% endif %}

          {% if member.role %}
            <p class="text-sm text-blue-600 mb-1">{{ member.role }}</p>
          {% endif %}

          {% if member.bio %}
            <p class="text-sm text-gray-600">{{ member.bio }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}
