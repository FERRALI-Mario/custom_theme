{# acf-blocks/product-grid/template.twig #}
{% set products = fields.products ?? [] %}
{% set columns = fields.columns ?? 'grid-cols-3' %}
{% set padding = fields.padding ?? 'p-6' %}
{% set bg = fields.background ?? 'bg-white' %}
{% set align = fields.align ?? 'text-left' %}

<section class="product-grid {{ bg }} {{ padding }}">
  <div class="container mx-auto">
    <div class="grid {{ columns }} gap-6">
      {% for product in products %}
        {% include 'acf-blocks/product-grid/_product-card.twig' with {
          product: product,
          align: align
        } %}
      {% endfor %}
    </div>
  </div>
</section>
