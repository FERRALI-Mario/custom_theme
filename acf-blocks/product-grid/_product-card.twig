{# acf-blocks/product-grid/_product-card.twig #}
<div class="product-card bg-white rounded shadow p-4 hover:shadow-md {{ align }}">
  {% if product.image %}
    <img src="{{ product.image.url }}" alt="{{ product.image.alt }}" class="mb-3 w-full object-cover h-48 rounded" />
  {% endif %}

  {% if product.title %}
    <h3 class="text-lg font-bold mb-1">{{ product.title }}</h3>
  {% endif %}

  {% if product.price %}
    <p class="text-blue-600 font-semibold mb-2">â‚¬{{ product.price|number_format(2, '.', ' ') }}</p>
  {% endif %}

  {% if product.description %}
    <p class="text-gray-600 mb-3">{{ product.description }}</p>
  {% endif %}

  <button class="bg-blue-600 hover:bg-blue-700 text-white text-sm py-2 px-4 rounded">
    Ajouter au panier
  </button>
</div>
