<section class="py-8 px-4 timeline-block">
	<div class="container mx-auto">

		{% if fields.title or fields.subtitle %}
			{% include 'components/section-header.twig' with {
				title: fields.title,
				text: fields.subtitle
			} %}
		{% endif %}

		<div class="relative">
			<div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-[2px] h-full bg-gray-300 z-0 overflow-hidden">
				<div class="timeline-progress absolute top-0 left-0 w-full bg-black origin-top scale-y-0 transition-transform duration-700 ease-out h-full z-10"></div>
			</div>

			<div class="space-y-20 relative z-10">
				{% for event in fields.events %}
					<div class="timeline-item flex flex-col md:flex-row items-center relative {{ loop.index is odd ? 'md:flex-row-reverse' : '' }}">

						<div class="timeline-dot absolute hidden md:block left-1/2 transform -translate-x-1/2 w-4 h-4 bg-gray-300 rounded-full z-20 transition-colors duration-500"></div>

						<div class="hidden md:block absolute top-1/2 h-[2px] w-12 bg-gray-300 z-0 {{ loop.index is odd ? 'right-1/2 -mr-14' : 'left-1/2 -ml-14' }}"></div>

						<div class="timeline-card mx-5 md:mx-0 md:w-[42%] px-6 py-4 bg-gradient-to-br from-white via-gray-100 to-gray-200 shadow-md rounded-md opacity-0 translate-y-4 transition-all duration-700">
							<span class="text-gray-500 font-bold text-xl mb-1">{{ event.year }}</span>
							<h3 class="text-xl font-semibold mb-2">{{ event.event_title }}</h3>
							{% if event.event_description %}
								<p class="text-gray-800">{{ event.event_description }}</p>
							{% endif %}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

	</div>
</section>
