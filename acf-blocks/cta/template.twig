<section
	class="cta-block relative py-16 md:py-20 lg:py-24 text-white text-center bg-fixed bg-cover bg-center" style="background-image: url('{{ fields.background }}');" role="region" aria-labelledby="cta-title">
	{# Overlay plus lisible sur fond photo #}
	<div class="absolute inset-0 bg-black/55 md:bg-black/50 z-0"></div>

	<div class="relative z-10 mx-auto max-w-7xl px-6">
		{% if fields.title %}
			{# Titre : même échelle que les autres blocks, figée après md #}
			<h2 id="cta-title" class="text-3xl sm:text-4xl md:text-4xl lg:text-4xl xl:text-4xl font-bold tracking-tight mb-4 sm:mb-5 lg:mb-6">
				{{ fields.title }}
			</h2>
		{% endif %}

		{% if fields.subtitle %}
			{# Paragraphe : même logique, largeur contenue pour la lisibilité #}
			<p class="mx-auto max-w-3xl text-base sm:text-lg lg:text-xl leading-relaxed text-gray-100/95 mb-8 lg:mb-10">
				{{ fields.subtitle }}
			</p>
		{% endif %}

		{% if fields.button_text and fields.button_url %}
			{# Bouton plein clair (pas outline) pour fond sombre #}
			{% include 'components/button.twig' with {
        button_text: fields.button_text,
        button_url:  fields.button_url,
        open_in_new_tab: fields.open_in_new_tab,
        variant: 'solid-light'
      } %}
		{% endif %}
	</div>
</section>
