<section class="logos-carousel py-20 px-4">
    <div class="container mx-auto text-center">
        {# Affichage du titre et du texte #}
        {% if fields.title %}
            <h2 class="text-3xl font-bold mb-4">{{ fields.title }}</h2>
        {% endif %}

        {% if fields.text %}
            <p class="max-w-xl mx-auto text-gray-700 mb-10">{{ fields.text }}</p>
        {% endif %}
        <div class="logos-wrapper flex justify-center space-x-4">
            {% for logo in fields.logos %}
                <div class="group relative">
                    <a href="{{ logo.logo_url }}" target="_blank">
                        <img src="{{ logo.logo_image.url }}" alt="{{ logo.logo_image.alt }}" class="max-h-24 object-contain transition duration-300 group-hover:brightness-100 filter brightness-75">
                        
                        {# Filtre blanc sur chaque logo #}
                        <div class="absolute inset-0 bg-white opacity-40 group-hover:opacity-0 transition duration-300"></div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
