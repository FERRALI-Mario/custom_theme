{# views/blocks/product-card.twig #}
<section class="products py-12 bg-white">
  <div class="container mx-auto px-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for product in block.products %}
      <div class="card border rounded-lg overflow-hidden shadow-sm">
        <img src="{{ product.image.url }}" alt="{{ product.image.alt }}" class="w-full h-48 object-cover" />
        <div class="p-6">
          <h3 class="text-2xl font-semibold mb-2">{{ product.title }}</h3>
          <p class="text-gray-600 mb-4">{{ product.description }}</p>
          {% from 'components/macros.twig' import button %}
          {{ button('En savoir plus', product.link, 'mt-2 block') }}
        </div>
      </div>
    {% endfor %}
  </div>
</section>
