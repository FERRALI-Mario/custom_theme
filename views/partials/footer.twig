<footer class="bg-gray-900 text-white py-8">
  <div class="container mx-auto px-4">

    {# Menu du footer #}
    <nav class="mb-4">
      {{ function('wp_nav_menu', {
        theme_location: 'footer',
        menu_class: 'flex flex-wrap gap-4 text-sm',
        container: false,
        echo: false
      }) | raw }}
    </nav>

    {# Texte personnalis√© depuis ACF #}
    {% if footer.text %}
      <p class="text-xs text-gray-400">{{ footer.text }}</p>
    {% endif %}

  </div>
</footer>
