<footer class="site-footer bg-gray-100 border-t mt-12">
  <div class="container mx-auto py-8 px-6 text-center">
    <p class="text-sm text-gray-600">&copy; {{ "now"|date("Y") }} {{ site.name }}. Tous droits réservés.</p>
    <nav class="mt-4">
      <ul class="flex justify-center space-x-4">
        {% for item in footer_menu.items %}
          <li>
            <a href="{{ item.link }}" class="text-gray-600 hover:underline">{{ item.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</footer>
