{# views/partials/header.twig #}
<header class="site-header bg-white shadow">
  <div class="container mx-auto flex items-center justify-between py-4 px-6">
    <a href="{{ site.url }}" class="text-xl font-bold">{{ site.name }}</a>

    <nav class="hidden md:block">
      <ul class="flex space-x-6">
        {% for item in menu.items %}
          <li>
            <a href="{{ item.link }}" class="hover:underline">{{ item.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    <button class="menu-toggle md:hidden focus:outline-none">
      â˜°
    </button>
  </div>
</header>
