<header class="w-full top-0 z-50 transition-all duration-300 bg-gray-900 text-white shadow-lg" x-data="{ mobileMenuOpen: false }">
	<div class="container mx-auto px-6 h-20 flex justify-between items-center">

		<div class="flex-shrink-0">
			<a href="{{ site.url }}" class="flex items-center gap-2 group">
				{% if header.logo %}
					<img src="{{ get_attachment(header.logo).src }}" alt="{{ site.name }}" class="h-10 w-auto transition-transform duration-300 group-hover:scale-105"/>
				{% else %}
					<span class="font-bold text-2xl tracking-tighter">{{ site.name }}</span>
				{% endif %}
			</a>
		</div>

		{% include 'partials/navigation.twig' %}
	</div>
</header>
