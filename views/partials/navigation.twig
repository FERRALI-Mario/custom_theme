<nav class="hidden md:flex items-center gap-8">
	{% if menu %}
		<ul class="flex items-center gap-6">
			{% for item in menu.items %}
				<li>
					<a href="{{ item.link }}" class="relative text-sm font-medium text-gray-300 hover:text-white transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-0.5 after:bg-white after:left-0 after:-bottom-1 after:transition-all after:duration-300 hover:after:w-full">
						{{ item.title }}
					</a>
				</li>
			{% endfor %}
		</ul>
	{% endif %}
</nav>

<button id="burger-btn" aria-label="Menu" class="md:hidden text-white focus:outline-none w-8 h-8 relative flex flex-col justify-center gap-1.5 z-50">
	<span class="w-full h-0.5 bg-white rounded-full transition-all duration-300 origin-center line-1"></span>
	<span class="w-full h-0.5 bg-white rounded-full transition-all duration-300 opacity-100 line-2"></span>
	<span class="w-full h-0.5 bg-white rounded-full transition-all duration-300 origin-center line-3"></span>
</button>
<div id="mobile-menu" class="fixed inset-0 bg-gray-900/95 backdrop-blur-sm z-40 transform translate-x-full transition-transform duration-300 md:hidden flex flex-col justify-center items-center">
	<nav>
		{% if menu %}
			<ul class="flex flex-col items-center gap-8 text-center">
				{% for item in menu.items %}
					<li class="opacity-0 translate-y-4 transition-all duration-500 delay-[{{ loop.index * 100 }}ms] mobile-link">
						<a href="{{ item.link }}" class="text-2xl font-medium text-white hover:text-gray-300">
							{{ item.title }}
						</a>
					</li>
				{% endfor %}
			</ul>
		{% endif %}
	</nav>
</div>
