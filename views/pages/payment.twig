{% extends "base.twig" %}
{% block content %}
	<div class="py-12 px-4 max-w-md mx-auto text-center">
		<h1 class="text-2xl font-bold mb-4">Régler l'acompte</h1>
		<div class="bg-gray-50 p-6 rounded-lg mb-6 text-left">
			<p>
				<strong>Bonjour
					{{ infos.client }},</strong>
			</p>
			<p class="mt-2">Séjour du
				{{ infos.start }}
				au
				{{ infos.end }}</p>
			<p class="mt-2 text-xl font-bold">Acompte à payer :
				{{ infos.montant }}
				€</p>
			<p class="text-sm text-gray-500">(Total séjour :
				{{ infos.total }}
				€)</p>
		</div>

		<form method="POST">
			<button type="submit" name="pay_stripe" class="w-full bg-black text-white py-3 rounded-md hover:bg-gray-800 transition">
				Payer par Carte Bancaire
			</button>
		</form>

		{% if error %}
			<p class="text-red-600 mt-4">{{ error }}</p>
		{% endif %}
	</div>
{% endblock %}
